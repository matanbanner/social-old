<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @user.image(:medium) %>
</p>
<p>
  <% if @current_user != @user %>
    <% if @current_user.following?(@user) %>
      <%= link_to 'Unfollow me!', {action: :unfollow, id: @user.id}%>
    <% else %>
    <%= link_to 'Follow me!', {action: :follow, id: @user.id}%>
    <% end %>
  <% end %>
</p>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Country:</strong>
  <%= @user.country %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @user.birthday %>
</p>

<% if @user.followings.present? %>
  <p>
    <strong>Followings:</strong>
    <div class="followings">
      <% @user.followings.each do |user| %>
      <div class="floated_img">
        <%= user_image_link(user) %>
      </div>
      <% end %>
    </div>
  </p>
<% end %>

<% if @user.followers.present? %>
  <p>
    <div class="clear_left">
      <strong>Followers:</strong>
    </div>
    <div class="followers">
      <% @user.followers.each do |user| %>
      <div class="floated_img">
        <%= user_image_link(user) %>
      </div>
      <% end %>
    </div>
  </p>
<% end %>


<p class="status">
  <strong>Status:</strong>
  <%= @user.status %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

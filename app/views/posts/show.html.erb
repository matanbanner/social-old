<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Publisher:</strong>
  <%= user_name_link(@post.publisher) %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
<p>
  <strong>Commenter:</strong>
  <%= user_name_link(comment.commenter)%>
  <strong></strong>
</p>

<p>
  <strong>Body:</strong>
  <%= comment.body %>
</p>

<p>
  <%= link_to 'Destroy', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' }%>
</p>
<% end %>



<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %>

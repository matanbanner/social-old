<table>
  <tr>
    <td>
      <%= user_image_tag(@current_user) %>
    </td>
    <td>
      <%= @current_user.name %>
    </td>
    <td>
      <%= link_to 'Home', controller: :home, action: :index %>
    </td>
    <td>
      <%= link_to 'New Post', controller: :posts, action: :new %>
    </td>
    <td>
      <%= link_to 'New Event', controller: :posts, action: :new %>
    </td>
    <td>
      <%= link_to 'My Profile', user_path(@current_user) %>
    </td>
    <td>
      <%= link_to 'Logout', controller: :home, action: :logout%>
    </td>
  </tr>
  <rt>
    <td>
      <%= form_tag(search_users_path, method: :get) do %>
        <div class="field">
          <%= label_tag :name, 'Find People' %>
          <%= text_field_tag :name %>
        </div>
        <div class="actions">
          <%= submit_tag("Search") %>
        </div>
      <% end %>
    </td>
  </rt>

</table>
